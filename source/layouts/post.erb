<% post_title = current_page.data.title %>
<% post_date = current_page.date %>
<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Daniel Tomlinson" %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
    <%= javascript_include_tag  "all" %>

    <script src="https://use.typekit.net/nxp2uhe.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
  </head>

  <body class="<%= page_classes %>">
    <header>
      <h1><a href="http://dantoml.com">Daniel Tomlinson</a></h1>
    </header>
    <section>
    	<article>
    		<header class="post-header">
    			<h1><%= post_title %></h1>
    			<time class="post-date" datetime="<%= post_date.strftime('%Y/%m/%d') %>"><%= post_date.strftime('%d %^B %Y') %></time>
    		</header>
    		<section class="post-content">
    		<%= yield %>
    		</section>
		</article>
	</section>
<!-- 	<section>
		<footer>
			Copyright &copy; Daniel Tomlinson 2012 - 2015
		</footer>
	</section> -->
  </body>
</html>
